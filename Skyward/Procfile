web: . /opt/venv/bin/activate && echo "Starting Xvfb and Gunicorn" && /usr/bin/xvfb-run -a -e /tmp/xvfb.log --server-args="-screen 0 1024x768x24" bash -c "LD_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu:$LD_LIBRARY_PATH gunicorn --bind 0.0.0.0:$PORT --workers 2 --timeout 300 app:app" && cat /tmp/xvfb.log
